<?xml version="1.0"?>
<robot name="dd_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find dd_robot)/urdf/material.xacro" />
<xacro:include filename="$(find dd_robot)/urdf/dd_robot.trans" />
<xacro:include filename="$(find dd_robot)/urdf/dd_robot.gazebo" />

     <link name="base">
        <inertial>
            <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 1.57"/>
            <mass value="1.0"/>
            <inertia ixx="4.079e+01" ixy="3.570e-14" ixz="-3.018e-11" iyy="3.911e+01" iyz="-2.177e-09" izz="7.877e+01"/>
        </inertial>
        
        <visual>
            <origin rpy="0.0 0.0 1.57" xyz="0.0 0.0 0.05"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/DD_4.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0.0 0.0 1.57" xyz="0.0 0.0 0.05"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/DD_4.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="lidar">
        <inertial>
            <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.26305599" ixy="0.0" ixz="0.0" iyy="0.26305604" iyz="0.0" izz="0.39458401"/>
        </inertial>
        
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.15"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Lidar_2.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.15"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Lidar_2.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="wheel1">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1233075" ixy="0.0" ixz="0.0" iyy="0.082205" iyz="0.0" izz="0.082205"/>
        </inertial>
        
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Wheel4_R.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Wheel4_R.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <link name="wheel2">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1233075" ixy="0.0" ixz="0.0" iyy="0.082205" iyz="0.0" izz="0.082205"/>
        </inertial>

        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Wheel4_L.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://dd_robot/mesh/Wheel4_L.stl" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
    </link>

    <joint name="lidar_j" type="fixed">
        <parent link="base"/>
        <child link="lidar"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.25"/>
    </joint>

    <joint name="joint1" type="continuous">
        <parent link="base"/>
        <child link="wheel1"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.51 0.0 0.1"/>
        <axis xyz="1.0 0.0 0.0"/>
        <dynamics damping="0.8" friction="500.0"/>

    </joint>

    <joint name="joint2" type="continuous">
        <parent link="base"/>
        <child link="wheel2"/>
        <origin rpy="0.0 0.0 0.0" xyz="-0.51 0.0 0.1"/>
        <axis xyz="1.0 0.0 0.0"/>
        <dynamics damping="0.8" friction="500.0"/>

    </joint>
</robot>